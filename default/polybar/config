green = #82a282

[bar/top]
#MONITOR=$(polybar -m|tail -1|sed -e s/:.*$//g)
monitor=${env:MONITOR:}
height = 25
line-size = 2
padding = 2
background = ${colors.background}
foreground = ${colors.foreground}
font-0 = Fira Code:pixelsize=8;1
font-1 = "Noto Sans CJK JP:size=9;1"
font-2 = "FontAwesome:pixelsize=9;2"
# font-3 = "Font Awesome 5 Free:style=Solid:pixelsize=9;2"
wm-restack = i3
modules-left = i3 speaker volume mpd
modules-center = date
modules-right = newmail battery updates memory cpu gw
module-margin-right = 2
fixed-center = true
tray-position = right
cursor-click = pointer
cursor-scroll = ns-resize

[module/i3]
type = internal/i3
pin-workspaces = true
format = "<label-state><label-mode>"
label-focused = "  %name%  "
label-unfocused = "  %name%  "
label-visible = "  %name%  "
label-urgent = "  %name%  "
label-unfocused-underline = ${colors.underline}
label-visible-underline = ${colors.underline}
label-urgent-underline = ${colors.underline}
label-focused-underline = ${colors.underline_active}

[module/battery]
type = internal/battery
poll-interval = 30
full-at = 95
battery = BAT0
adapter = AC
time-format = %H:%M
format-charging =  <label-charging>
format-discharging =  <label-discharging>
format-full =  <label-full>
label-charging = AC %percentage:2%% >
label-discharging = AC %percentage:2%% <
label-full =  AC %percentage:2%% =
label-charging-padding = 2
label-discharging-padding = 2
label-full-padding = 2
format-full-background = ${colors.underline}
format-charging-background = ${colors.underline}
format-discharging-background = ${colors.underline_active}

[module/cpu]
type = internal/cpu
interval = 2
label-underline = ${colors.underline}
label = Load %percentage:2%%
label-padding = 2

[module/updates]
type = custom/script
exec = ~/.config/scripts/polybar-pacman-aur.sh
label-underline = ${colors.underline}
label-padding = 2
interval = 600

[module/memory]
type = internal/memory
interval = 2
label =  Mem %percentage_used:2%%
label-underline = ${colors.underline}
label-padding = 2

[module/gw]
type = custom/script
exec = ~/.config/scripts/get_gw_ip.sh
interval = 1
label = GW %output%
label-underline = ${colors.underline}
label-padding = 2

[module/ping]
type = custom/script
inherit = bar/top
exec = ping -c 1 1.1.1.1 | tail -1 | cut -d' ' -f 4 | cut -d/ -f 1
label = %output%ms
label-underline = ${colors.underline}
label-padding = 2

[module/speaker]
type = custom/script
exec = ''
interval = 999999
;click-left = amixer sset Front toggle; amixer sset Headphone toggle
click-left = pacmd set-sink-port 0 analog-output-headphones
click-right = pacmd set-sink-port 0 analog-output-lineout
format = <label>
format-underline = ${colors.underline}
label = ""
label-padding = 2

[module/date]
type = internal/date
interval = 1
time = %H:%M:%S
date = %d.%m.%y
label = %time%  %date%
label-padding = 3
label-underline = ${colors.underline}
label-foreground = ${colors.color15}

[module/volume]
type = internal/pulseaudio
sink = alsa_output.pci-0000_00_1f.3.analog-stereo
use-ui-max = false
format-volume = <bar-volume>
format-muted-background = ${colors.background}
format-volume-background = ${colors.background}
format-volume-padding = 1
label-muted = - mute -
label-muted-padding = 2
bar-volume-width = 10
bar-volume-foreground-0 = ${colors.green}
bar-volume-foreground-1 = ${colors.green}
bar-volume-foreground-2 = ${colors.color3}
bar-volume-foreground-3 = ${colors.color3}
bar-volume-foreground-4 = ${colors.color1}
bar-volume-foreground = ${colors.dark}
;bar-volume-gradient = false
bar-volume-indicator = I
bar-volume-fill = -
bar-volume-empty = -

[module/mpd]
type = internal/mpd
host = localhost
port = 6600
interval = 1
format-online-background = ${colors.background}
format-online-padding = 2
format-online = "<icon-prev> <toggle> <icon-next>   <icon-repeat> <icon-single> <icon-random>  { <label-time> }-{ <label-song> }"
;format-online = "[ <icon-prev> <toggle> <icon-next> ]-[ <icon-repeat> <icon-single> <icon-random> ]-[ <label-time> ]-[ <label-song> ]"
label-time = %elapsed%/%total%
icon-pause =  
icon-play = 
icon-prev = 
icon-next = 
icon-repeat = 
icon-single = 
icon-random = 

[module/newmail]
type = custom/script
exec = ~/.mail/get_num_new_mail.sh
exec-if = [ -d ~/mail/ ]
interval = 60
label = %output%
label-underline = ${colors.underline}
label-padding = 2

[settings]
screenchange-reload = true

[colors]
grey = #404040
lightgrey = #555
darkgrey = #000d18
earth = #e3ceab
white = #ffffff
green = #82a282
red = #cb4641
orange = #dbbfa2

neon = #db74ed
yellow = #fcfa9f

background = #00000000
background_dark = #5a000000
background_white = #32ffffff
foreground = #ffffff

[bar/top]
;MONITOR=$(polybar -m|tail -1|sed -e s/:.*$//g)
monitor=${env:MONITOR:}
height = 25
line-size = 2
padding = 2
background = ${colors.background}
font-0 = Fira Mono:pixelsize=8;1
font-1 = "Font Awesome 5 Brands:pixelsize=9;2"
font-2 = "Font Awesome 5 Free:style=Solid:pixelsize=9;3"
wm-restack = i3
modules-left = i3 speaker volume 
modules-center = date
modules-right = battery memory cpu gw
module-margin-right = 2
fixed-center = true
tray-position = right
cursor-click = pointer
cursor-scroll = ns-resize

[module/i3]
type = internal/i3
pin-workspaces = true
format = "<label-state><label-mode>  "
format-prefix = " "
format-background = ${colors.background_dark}
label-focused-foreground = ${colors.orange}

[module/battery]
type = internal/battery
poll-interval = 30
full-at = 95
battery = BAT0
adapter = AC
time-format = %H:%M
format-charging =  <label-charging>
format-discharging =  <label-discharging>
format-full =  <label-full>
label-charging = AC %percentage:2%% >
label-discharging = AC %percentage:2%% <
label-full =  AC %percentage:2%% =
label-charging-padding = 2
label-discharging-padding = 2
label-full-padding = 2
format-full-background = ${colors.background_dark}
format-charging-background = ${colors.background_dark}
format-discharging-background = ${colors.background_dark}

[module/cpu]
type = internal/cpu
interval = 2
label-background = ${colors.background_dark}
label = Load %percentage:2%%
label-padding = 2

[module/memory]
type = internal/memory
interval = 2
label =  Mem %percentage_used:2%%
label-background = ${colors.background_dark}
label-padding = 2

[module/gw]
type = custom/script
exec = ~/.config/scripts/get_gw_ip.sh
interval = 1
label = GW %output%
label-background = ${colors.background_dark}
label-padding = 2

[module/speaker]
type = custom/script
exec = ''
interval = 999999
;click-left = amixer sset Front toggle; amixer sset Headphone toggle
click-left = pacmd set-sink-port alsa_output.pci-0000_00_1f.3.analog-stereo analog-output-headphones
click-right = pacmd set-sink-port alsa_output.pci-0000_00_1f.3.analog-stereo analog-output-lineout
format = <label>
format-background = ${colors.background_dark}
label = "ï€¥"
label-padding = 2

[module/date]
type = internal/date
interval = 1
time = %H:%M:%S
date = %d.%m.%y
label = %time%  %date%
label-padding = 3
label-background = ${colors.background_dark}

[module/volume]
type = internal/pulseaudio
sink = alsa_output.pci-0000_00_1f.3.analog-stereo
use-ui-max = false
format-volume = <bar-volume>
format-muted-background = ${colors.background_dark}
format-volume-background = ${colors.background_dark}
format-volume-padding = 1
label-muted = - mute -
label-muted-padding = 2
bar-volume-width = 10
bar-volume-foreground-0 = ${colors.green}
bar-volume-foreground-1 = ${colors.green}
bar-volume-foreground-2 = ${colors.orange}
bar-volume-foreground-3 = ${colors.orange}
bar-volume-foreground-4 = ${colors.red}
bar-volume-foreground = ${colors.dark}
:bar-volume-gradient = false
bar-volume-indicator = I
bar-volume-fill = -
bar-volume-empty = -

[settings]
screenchange-reload = true

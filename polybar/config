[colors]
grey = #404040
lightgrey = #555
darkgrey = #000d18
earth = #e3ceab
white = #ffffff
green = #82a282
red = #dca3a3
orange = #dbbfa2

background-alt = #444
foreground-alt = #555
background = #404040
foreground = #ffffff

[bar/top]
MONITOR=$(polybar -m|tail -1|sed -e s/:.*$//g)
width = 90%
height = 25
offset-x = 5%
offset-y = 10
line-size = 2
padding = 2
background = ${colors.grey}
foreground = ${colors.earth}
:font-0 = DejaVu Sans Mono:pixelsize=9;2
font-0 = Fira Mono:pixelsize=9;3
font-1 = "Font Awesome 5 Brands:pixelsize=9;2"
font-2 = "Font Awesome 5 Free:style=Solid:pixelsize=9;3"
: Allow windows to be displayed above bar
override-redirect = true
wm-restack = i3
modules-left = i3 volume 
modules-center = date
modules-right = battery memory cpu gw
module-margin-right = 1
fixed-center = true
tray-position = right
cursor-click = pointer
cursor-scroll = ns-resize

[module/i3]
type = internal/i3
index-sort = true
wrapping-scroll = false
format = "<label-state> <label-mode> "
format-foreground = ${colors.grey}
format-background = ${colors.earth}
label-separator = |
label-separator-margin-left = 1

[module/cpu]
type = internal/cpu
interval = 2
format-prefix = "" 
format-prefix-background = ${colors.earth}
format-prefix-foreground = ${colors.grey}
format-prefix-padding = 2
label = %percentage:2%%
label-underline = ${colors.earth}
label-padding = 2

[module/memory]
type = internal/memory
interval = 2
format-prefix = "" 
format-prefix-background = ${colors.earth}
format-prefix-foreground = ${colors.grey}
format-prefix-padding = 2
label = %percentage_used:2%%
label-underline = ${colors.earth}
label-padding = 2

[module/eth]
type = internal/network
interface = ${file:~/.config/polybar/gw}
interval = 3.0
format-connected-prefix = "" 
format-connected-prefix-background = ${colors.earth}
format-connected-prefix-foreground = ${colors.grey}
format-connected-prefix-padding = 2
label-connected = %local_ip%
label-connected-underline = ${colors.green}
label-padding-left = 2
label-connected-padding = 2
label-disconnected = 2
format-disconnected =
format-disconnected-prefix-padding = 2

[module/gw]
type = custom/script
exec = ~/.config/polybar/get_gw_ip.sh
interval = 1
format-prefix = "" 
format-prefix-background = ${colors.earth}
format-prefix-foreground = ${colors.grey}
format-prefix-padding = 2
label = %output%
label-underline = ${colors.green}
label-padding = 2


[module/date]
type = internal/date
interval = 1
time = %H:%M
label = %time%
label-padding = 2
label-underline = ${colors.earth}

[module/volume]
type = internal/volume
format-volume = <label-volume> <bar-volume>
label-volume ="" 
label-volume-foreground = ${root.foreground}
label-muted = muted
format-muted-prefix =" " 
format-muted-foreground = ${colors.lightgrey}
bar-volume-width = 10
bar-volume-foreground-0 = ${colors.green}
bar-volume-foreground-1 = ${colors.green}
bar-volume-foreground-2 = ${colors.orange}
bar-volume-foreground-3 = ${colors.orange}
bar-volume-foreground-4 = ${colors.red}
bar-volume-gradient = false
bar-volume-indicator = |
bar-volume-indicator-font = 2
bar-volume-fill = -
bar-volume-fill-font = 2
bar-volume-empty = -
bar-volume-empty-font = 2
bar-volume-empty-foreground = ${colors.lightgrey}

[module/battery]
type = internal/battery
poll-interval = 30
full-at = 95
battery = BAT0
adapter = AC
time-format = %H:%M
format-charging = <animation-charging><label-charging>
format-discharging = <ramp-capacity><label-discharging>
format-full = <ramp-capacity><label-full>
label-charging = %percentage:2%%
label-discharging = %percentage:2%%
label-full = %percentage:2%%
label-charging-underline = ${colors.green}
label-discharging-underline = ${colors.earth}
label-full-underline = ${colors.green}
label-charging-padding = 2
label-discharging-padding = 2
label-full-padding = 2
ramp-capacity-0 = 
ramp-capacity-0-background = ${colors.red}
ramp-capacity-1 = 
ramp-capacity-1-foreground = ${colors.red}
ramp-capacity-2 = 
ramp-capacity-3 = 
ramp-capacity-4 = 
ramp-capacity-padding = 2
ramp-capacity-foreground = ${colors.grey}
ramp-capacity-background = ${colors.earth}
animation-charging-0 = "   "
animation-charging-1 = ">  "
animation-charging-2 = ">> "
animation-charging-3 = ">>>"
animation-charging-framerate = 2000
animation-charging-padding = 1
animation-charging-foreground = ${colors.grey}
animation-charging-background = ${colors.earth}



[settings]
screenchange-reload = true
;format-padding = 2
;format-foreground = %{colors.earth}
;format-background = %{colors.grey}
;label-padding = 2

